.prepend-3
  #login-form.box.span-9
    %h3 Log In
    .flash= flash[:notice]
    %form(action="#{action}" method="POST")
      %p
        %label Login:
        %br
        %input.text(type="text" name="login")
        %br
      %p
        %label Password:
        %br
        %input.text(type="password" name="password")
        %br
      %p
        %input(type="submit" value="Log In") 
        or 
        %a(href='/signup') sign up


