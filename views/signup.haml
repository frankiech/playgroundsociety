.prepend-3
  #signup-form.box.span-9
    %h3 Sign Up
    .flash= flash[:notice]
    %form(action="#{action}" method="POST")
      %p
        %label Username:
        %br
        %input.text(type="text" name="username")
        %br
      %p
        %label Password:
        %br
        %input.text(type="password" name="password")
        %br
      %p
        %label Phone:
        %br
        %input.text(type="text" name="phone")
        %br
      %p
        %input(type="submit" value="Sign Up")
        %input(type="reset")
        %br
